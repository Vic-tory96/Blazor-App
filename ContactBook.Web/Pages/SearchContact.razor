@page "/SearchContact"
@inherits SearchContactBase


<h3>Search Contact</h3>
<div class="form-group">
    <label for="name">Name:</label>
    <input type="text" class="form-control" id="name" @bind-value ="Name">
</div>
<button class="btn btn-outline-primary" type="button" @onclick="SearchContactByName">Search</button>
@if (_Contacts == null)
{
    <p>Loading</p>
  
}
else{
   
        <div class="card-deck">
            @foreach (var contact in _Contacts)
            {
            <div class="col span-1-of-4" style="min-width: 18rem; max-width:30.5%;">
            <div class=" card-header">
                <h3>

                    @contact.FirstName @contact.LastName
                </h3>
            </div>
                <img class="card-img-top imageThumbnail" src="@contact.PhotoPath" />
            
            <div class="card-footer text-center">
                <a href="@($"/contactdetails/{contact.ContactId}")" class=" btn btn-primary m-1">View</a>

                <a href="@($" editcontact/{contact.ContactId}")" class=" btn btn-primary" m-1>Edit</a>
            </div>
            </div>
            }
        </div>
    
}